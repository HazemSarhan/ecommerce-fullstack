<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <!-- Navbar -->
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-5">
      <div class="text-center">
        <h1 class="fw-bold text-success">Payment Successful!</h1>
        <p class="lead mt-3">Thank you for your order.</p>
      </div>

      <% if (order) { %>
      <div class="card mt-5">
        <div class="card-body">
          <h3 class="card-title text-center">Order Summary</h3>
          <hr />
          <div class="row">
            <div class="col-md-6">
              <p><strong>Order ID:</strong> <%= order.id %></p>
              <p><strong>Total Price:</strong> $<%= order.totalPrice %></p>
              <p><strong>Status:</strong> <%= order.status %></p>
            </div>
            <div class="col-md-6">
              <h5>Items:</h5>
              <ul class="list-group">
                <!-- Mapping through orderItems -->
                <% order.orderItems.forEach((orderItem) => { %>
                <li
                  class="list-group-item fw-bold  justify-content-between align-items-center"
                >
                  <%= orderItem.product.name %>
                </li>
                <li
                  class="list-group-item fw-bold  justify-content-between align-items-center"
                >
                  Quantity: <%= orderItem.quantity %>
                </li>
                <img
                src="<%= orderItem.product.picture %>" 
                class="list-group-item d-flex justify-content-between align-items-center"
                >
                  
                </img>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
      <div class="text-center mt-5">
        <p>No order details available.</p>
      </div>
      <% } %>

      <div class="text-center my-5">
        <a href="/" class="btn main-button">Return to Home</a>
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
